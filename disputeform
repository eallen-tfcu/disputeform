import React, { useState, useEffect } from 'react';

const VisaFraudDisputeForm = () => {
  const [memberInfo, setMemberInfo] = useState({
    memberName: '',
    lastFourCard: '',
    date: '',
    representativeName: ''
  });

  const [transactions, setTransactions] = useState(
    Array(15).fill().map(() => ({ date: '', merchantName: '', amount: '' }))
  );

  const [totalAmount, setTotalAmount] = useState(0);

  // Calculate total whenever transactions change
  useEffect(() => {
    const sum = transactions.reduce((total, transaction) => {
      const amount = parseFloat(transaction.amount) || 0;
      return total + amount;
    }, 0);
    setTotalAmount(sum);
  }, [transactions]);

  const handleMemberInfoChange = (field, value) => {
    setMemberInfo(prev => ({
      ...prev,
      [field]: value
    }));
  };

  const handleTransactionChange = (index, field, value) => {
    setTransactions(prev => {
      const updated = [...prev];
      updated[index] = {
        ...updated[index],
        [field]: value
      };
      return updated;
    });
  };

  return (
    <div className="max-w-4xl mx-auto p-6 bg-white">
      <div className="text-center mb-8">
        <h1 className="text-2xl font-bold text-gray-800 mb-2">VISA Debit Card Fraud Dispute</h1>
        <p className="text-red-600 font-medium">List all disputed transactions on this form.</p>
      </div>

      {/* Member Information Section */}
      <div className="mb-8">
        <table className="w-full border-collapse border border-gray-400">
          <thead>
            <tr className="bg-blue-50">
              <th className="border border-gray-400 px-3 py-2 text-sm font-medium text-gray-700">Member Name</th>
              <th className="border border-gray-400 px-3 py-2 text-sm font-medium text-gray-700">Last 4 of Card #</th>
              <th className="border border-gray-400 px-3 py-2 text-sm font-medium text-gray-700">Date</th>
              <th className="border border-gray-400 px-3 py-2 text-sm font-medium text-gray-700">Representative Name</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td className="border border-gray-400 p-1">
                <input
                  type="text"
                  value={memberInfo.memberName}
                  onChange={(e) => handleMemberInfoChange('memberName', e.target.value)}
                  className="w-full px-2 py-1 border-none outline-none bg-transparent"
                  placeholder=""
                />
              </td>
              <td className="border border-gray-400 p-1">
                <input
                  type="text"
                  value={memberInfo.lastFourCard}
                  onChange={(e) => handleMemberInfoChange('lastFourCard', e.target.value)}
                  className="w-full px-2 py-1 border-none outline-none bg-transparent"
                  placeholder=""
                  maxLength="4"
                />
              </td>
              <td className="border border-gray-400 p-1">
                <input
                  type="date"
                  value={memberInfo.date}
                  onChange={(e) => handleMemberInfoChange('date', e.target.value)}
                  className="w-full px-2 py-1 border-none outline-none bg-transparent"
                />
              </td>
              <td className="border border-gray-400 p-1">
                <input
                  type="text"
                  value={memberInfo.representativeName}
                  onChange={(e) => handleMemberInfoChange('representativeName', e.target.value)}
                  className="w-full px-2 py-1 border-none outline-none bg-transparent"
                  placeholder=""
                />
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      {/* Transactions Section */}
      <div className="mb-6">
        <table className="w-full border-collapse border border-gray-400">
          <thead>
            <tr className="bg-blue-50">
              <th className="border border-gray-400 px-3 py-2 text-sm font-medium text-gray-700 w-32">Date</th>
              <th className="border border-gray-400 px-3 py-2 text-sm font-medium text-gray-700">Merchant Name</th>
              <th className="border border-gray-400 px-3 py-2 text-sm font-medium text-gray-700 w-40">Transaction Amount</th>
            </tr>
          </thead>
          <tbody>
            {transactions.map((transaction, index) => (
              <tr key={index} className="hover:bg-gray-50">
                <td className="border border-gray-400 p-1">
                  <input
                    type="date"
                    value={transaction.date}
                    onChange={(e) => handleTransactionChange(index, 'date', e.target.value)}
                    className="w-full px-2 py-1 border-none outline-none bg-transparent text-sm"
                  />
                </td>
                <td className="border border-gray-400 p-1">
                  <input
                    type="text"
                    value={transaction.merchantName}
                    onChange={(e) => handleTransactionChange(index, 'merchantName', e.target.value)}
                    className="w-full px-2 py-1 border-none outline-none bg-transparent text-sm"
                    placeholder=""
                  />
                </td>
                <td className="border border-gray-400 p-1">
                  <input
                    type="number"
                    step="0.01"
                    value={transaction.amount}
                    onChange={(e) => handleTransactionChange(index, 'amount', e.target.value)}
                    className="w-full px-2 py-1 border-none outline-none bg-transparent text-sm text-right"
                    placeholder="0.00"
                  />
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      {/* AutoSum Total Box */}
      <div className="flex justify-end">
        <div className="bg-yellow-50 border-2 border-yellow-400 rounded-lg p-4 shadow-md">
          <div className="flex items-center space-x-4">
            <span className="text-lg font-semibold text-gray-700">Total Disputed Amount:</span>
            <div className="bg-white border border-gray-300 rounded px-4 py-2 min-w-32">
              <span className="text-xl font-bold text-green-600">
                ${totalAmount.toFixed(2)}
              </span>
            </div>
          </div>
          <div className="text-xs text-gray-600 mt-2">
            âœ“ Automatically calculated from transaction amounts above
          </div>
        </div>
      </div>

      {/* Instructions */}
      <div className="mt-8 p-4 bg-gray-50 rounded-lg">
        <p className="text-sm text-gray-600">
          <strong>Instructions:</strong> Fill out all member information at the top, then list each disputed transaction with the date, merchant name, and amount. The total will be automatically calculated as you enter amounts.
        </p>
      </div>
    </div>
  );
};

export default VisaFraudDisputeForm;
